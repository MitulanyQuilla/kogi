<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:showDividers="middle" >
    
    <!--
    Este FrameLayout contendrá un fragmento dinámico con el contenido del elemento pulsado del listado
    -->
	<include 
	    style="@style/layout_linea_principal"
	    layout="@layout/linea_principal"/>    
    
    
    <FrameLayout
        android:id="@+id/framelayout_detalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <include 
	    style="@style/layout_linea_principal"
	    layout="@layout/linea_principal" />
    
    <FrameLayout
        android:layout_marginTop="@dimen/distancia_lista_imagen"
        android:id="@+id/framelayout_maestro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    

</LinearLayout>